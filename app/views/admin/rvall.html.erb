<%= link_to 'Show new', admin_rv_path %>

<%= form_with(admin_rvall_path method: :get) do |form| %>
    Search <%= form.text_field :search, params[:search] %>
    <%= form.submit 'Search', name: nil %>
<% end %>

<table class="table table-striped">
<tr>
<td>Name</td>
<td>Address</td>
<td>Verified</td>
<td>Edit</td>
</tr>

<% @rv.each do |r| %>
    <tr>
        <td><%= r.parkName %></td>
        <td><%= r.address %></td>
        <td><%= r.verified %></td>
        <td><%= link_to 'edit', edit_rvpark_path(r) %></td> 
    </tr>
<% end %>
