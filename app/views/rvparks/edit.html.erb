<div class="container form-1000px">
<%= form_with(model: @rvpark, local: true) do |form| %>
  <div class="form-1000px centered"
    <% if @rvpark.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(@rvpark.errors.count, "error") %> prohibited
          this article from being saved:
        </h2>
        <ul>
          <% @rvpark.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    
    <div class='form-check'>
      <%= form.check_box :isnotcampground, :class => 'form-check-input' %>
      <%= form.label :isnotcampground, "Is this NOT a campground?", :class => 'form-check-label' %>
    </div>

    <div class="form-group">
    <h6><b>Public, Private, Membership?</b></h6>
      <div class ='form-check'>
        <%= form.check_box :public, :class => 'form-check-input' %>
        <%= form.label :public, "Public Campground", :class => 'form-check-label' %>
      </div>      
      <div class ='form-check'>
        <%= form.check_box :private, :class => 'form-check-input' %>
        <%= form.label :private, "Private Campground", :class => 'form-check-label' %>
      </div>
      <div class ='form-check'>
        <%= form.check_box :dayuse, :class => 'form-check-input' %>
        <%= form.label :dayuse, "Day Use", :class => 'form-check-label' %>
      </div>
      <%= form.label :membership %>
      <%= form.select(:membership, ['', 'Thousand Trails', 'Outdoor World', 'Resort Parks International',
      'Coast to Coast Campgrounds', 'Adventure Outdoor Resorts', 'Outdoor Adventures', 'Colorado River Adventures'], {}, {:class => 'form-control'}) %>

      <div class ='form-check'>
        <%= form.check_box :noreservations, :class => 'form-check-input' %>
        <%= form.label :noreservations, "No Reservations", :class => 'form-check-label' %>
      </div>
      <hr>
      <h6><b>Information</b></h6>
      <%= form.label :parkname %><br>
      <%= form.text_field :parkname, :class => 'form-control' %>

      <div class='form-check'>
        <%= form.check_box :seasonal, :class => 'form-check-input' %>
        <%= form.label :seasonal, "Seasonal", :class => 'form-check-label' %>
      </div>

      <%= form.label :seasonstart %>
      <%= form.select(:seasonstart, ['', 'January', 'February', 'March', 'April', 'May', 'June', 'July',
      'August', 'September', 'October', 'November', 'December'], {}, {:class => 'form-control'}) %>

      <%= form.label :seasonend %>
      <%= form.select(:seasonend, ['', 'January', 'February', 'March', 'April', 'May', 'June', 'July',
      'August', 'September', 'October', 'November', 'December'], {}, {:class => 'form-control'}) %>

      <%= form.label :address %><br>
      <%= form.text_field :address, :class => 'form-control' %>

      <%= form.label :gps, "GPS coordinates" %> &nbsp
      <%= form.text_field :gps %> &nbsp

      <%= form.label :phoneNumber %><br>
      <%= form.text_field :phoneNumber, :class => 'form-control' %>

      <%= form.label :description %><br>
      <%= form.text_area :description, :class => 'form-control' %>

      <%= form.label :email %><br>
      <%= form.email_field :email, :class => 'form-control' %>

      <%= form.label :website %> &nbsp <%= link_to @rvpark.website, @rvpark.website, :target => 'new' %>
      <%= form.text_field :website, :class => 'form-control' %>

      <%= form.label :reservation %><br>
      <%= form.text_field :reservation, :class => 'form-control' %>

      <%= form.label :rvlength %><br>
      <%= form.text_field :rvlength, :class => 'form-control' %>
      <br>
      <hr>

      <div class ='form-check'>
        <%= form.check_box :premium, :class => 'form-check-input' %>
        <%= form.label :premium, "Premium Member", :class => 'form-check-label' %>
      </div>
      
      <%= form.label :premiumuntil, "Premium Until" %><br>
      <%= form.date_field :premiumuntil, :class => 'form-control' %>

          <hr>
          <h6><b>Payment Types</b></h6>
            <div class='form-check'>
              <%= form.check_box :cash, :class => 'form-check-input' %>
              <%= form.label :cash, "Cash", :class => 'form-check-label' %>
            </div>
            <div class='form-check'>
                <%= form.check_box :check, :class => 'form-check-input' %>
                <%= form.label :check, "Checks", :class => 'form-check-label' %>
            </div>
            <div class='form-check'>
              <%= form.check_box :visa, :class => 'form-check-input' %>
              <%= form.label :visa, "Visa", :class => 'form-check-label' %>
            </div>
            <div class='form-check'>
                <%= form.check_box :mastercard, :class => 'form-check-input' %>
                <%= form.label :mastercard, "Mastercard", :class => 'form-check-label' %>
            </div>
            <div class='form-check'>
                <%= form.check_box :militarydiscount, :class => 'form-check-input' %>
                <%= form.label :militarydiscount, "Military Discounts offered", :class => 'form-check-label' %>
            </div>
            <hr>

            <h6><b>Images</b></h6>
            <% @rvpark.parkimages.each do |image| %>
              <%= image_tag(image.url, size: 40) %>
              <%= image.url %> &nbsp &nbsp <%= link_to 'delete', [image.rvpark, image], method: :delete %><br>
            <% end %>

            <%= form.label :url1, 'New image url' %><br>
            <%= form.text_field :url1 %><br>

            <%= form.label :url2, 'New image url' %><br>
            <%= form.text_field :url2 %><br>

            <%= form.label :url3, 'New image url' %><br>
            <%= form.text_field :url3 %><br>

            <hr>

            <div class="row">
              <div class="col">
              <h6><b>Road / Lot types</b></h6>
                <div class="form-check">
                <%= form.check_box :accessible, :class => 'form-check-input' %>
                <%= form.label :accessible, "Accessible Sites", :class => 'form-check-label' %>
              </div>
                <div class="form-check">
                  <%= form.check_box :dirt, :class => 'form-check-input' %>
                  <%= form.label :dirt, "Dirt", :class => 'form-check-label' %>
                </div>
                <div class="form-check">
                  <%= form.check_box :grass, :class => 'form-check-input' %>
                  <%= form.label :grass, "Grass", :class => 'form-check-label' %>
                </div>
                <div class="form-check">
                  <%= form.check_box :gravel, :class => 'form-check-input' %>
                  <%= form.label :gravel, "Gravel", :class => 'form-check-label' %>
                </div>
                <div class="form-check">
                  <%= form.check_box :paved, :class => 'form-check-input' %>
                  <%= form.label :paved, "Paved", :class => 'form-check-label' %>
                </div>
                <div class="form-check">
                  <%= form.check_box :tents, :class => 'form-check-input' %>
                  <%= form.label :tents, "Tents", :class => 'form-check-label' %>
                </div>       
                <div class='form-check'>
                  <%= form.check_box :cabins, :class => 'form-check-input' %>
                  <%= form.label :cabins, "Cabins", :class => 'form-check-label' %>
                </div>
                <div class="form-check">
                  <%= form.check_box :beach, :class => 'form-check-input' %>
                  <%= form.label :beach, "Beachfront Access", :class => 'form-check-label' %>
                </div>
                <div class="form-check">
                  <%= form.check_box :pullthru, :class => 'form-check-input' %>
                  <%= form.label :pullthru, "Pull-throughs", :class => 'form-check-label' %>
                </div>                 
                <div class="form-check">
                  <%= form.check_box :backin, :class => 'form-check-input' %>
                  <%= form.label :backin, "Back-ins", :class => 'form-check-label' %>
                </div> 
              </div>
            </div>
            <hr>
      <div class="row">
            <div class="col">
            <h6><b>Features</b></h6>
              <div class="form-check">
                <%= form.check_box :nopets, :class => 'form-check-input' %>
                <%= form.label :nopets, "No pets allowed", :class => 'form-check-label' %>
              </div>
              <div class='form-check'>
                <%= form.check_box :laundry, :class => 'form-check-input' %>
                <%= form.label :laundry, "Laundry Facilities", :class => 'form-check-label' %>
              </div>

              <div class='form-check'>
                <%= form.check_box :communityarea, :class => 'form-check-input' %>
                <%= form.label :communityarea, "Communinty Hall / Rec Room", :class => 'form-check-label' %>
              </div>

              <div class='form-check'>
                <%= form.check_box :fullhookup, :class => 'form-check-input' %>
                <%= form.label :fullhookup, "Full hook ups available", :class => 'form-check-label' %>
              </div>
              <div class='form-check'>
                <%= form.check_box :electriconly, :class => 'form-check-input' %>
                <%= form.label :electriconly, "Only electric", :class => 'form-check-label' %>
              </div>
              <div class='form-check'>
                <%= form.check_box :wateronly, :class => 'form-check-input' %>
                <%= form.label :wateronly, "Only water", :class => 'form-check-label' %>
              </div>
              <div class='form-check'>
                <%= form.check_box :bigrigs, :class => 'form-check-input' %>
                <%= form.label :bigrigs, "Room for Big Rigs", :class => 'form-check-label' %>
              </div>
              <div class='form-check'>
                <%= form.check_box :store, :class => 'form-check-input' %>
                <%= form.label :store, "Store / Dining on or near", :class => 'form-check-label' %>
              </div>
              <div class='form-check'>
                <%= form.check_box :cabletv, :class => 'form-check-input' %>
                <%= form.label :cabletv, "Cable TV", :class => 'form-check-label' %>
              </div>
              <div class='form-check'>
                <%= form.check_box :foodlockers, :class => 'form-check-input' %>
                <%= form.label :foodlockers, "Food Lockers", :class => 'form-check-label' %>
              </div>
              <div class='form-check'>
                <%= form.check_box :slideouts, :class => 'form-check-input' %>
                <%= form.label :slideouts, "Slide-Outs", :class => 'form-check-label' %>
              </div>        
              <div class='form-check'>
                <%= form.check_box :propane, :class => 'form-check-input' %>
                <%= form.label :propane, "Propane", :class => 'form-check-label' %>
              </div> 
            </div>

            <div class='col'>
              <h6><b>Outdoor Activities</b></h6>
              <div class='form-check'>
                <%= form.check_box :swimmingpool, :class => 'form-check-input' %>
                <%= form.label :swimmingpool, "Swimming Pool", :class => 'form-check-label' %>
              </div>
              <div class='form-check'>
                <%= form.check_box :picnictables, :class => 'form-check-input' %>
                <%= form.label :picnictables, "Picnic Tables", :class => 'form-check-label' %>
              </div>
              <div class='form-check'>
                <%= form.check_box :playground, :class => 'form-check-input' %>
                <%= form.label :playground, "Playground for kids", :class => 'form-check-label' %>
              </div>
              <div class='form-check'>
                <%= form.check_box :outdoorsports, :class => 'form-check-input' %>
                <%= form.label :outdoorsports, "Outdoor sports area", :class => 'form-check-label' %>
              </div>
              <div class='form-check'>
                <%= form.check_box :biking, :class => 'form-check-input' %>
                <%= form.label :biking, "Biking available", :class => 'form-check-label' %>
              </div>
              <div class='form-check'>
                <%= form.check_box :boating, :class => 'form-check-input' %>
                <%= form.label :boating, "Boating available", :class => 'form-check-label' %>
              </div>
              <div class='form-check'>
                <%= form.check_box :bbqs, :class => 'form-check-input' %>
                <%= form.label :bbqs, "BBQs or fire grate", :class => 'form-check-label' %>
              </div>
              <div class='form-check'>
                <%= form.check_box :firepits, :class => 'form-check-input' %>
                <%= form.label :firepits, "Campfire ring", :class => 'form-check-label' %>
              </div>
                <div class='form-check'>
                <%= form.check_box :firewood, :class => 'form-check-input' %>
                <%= form.label :fireood, "Firewood", :class => 'form-check-label' %>
              </div>
            </div>

            <div class='col'>
              <div class='form-check'>
                <%= form.check_box :petarea, :class => 'form-check-input' %>
                <%= form.label :petarea, "Pet Area available", :class => 'form-check-label' %>
              </div>
              <div class='form-check'>
                <%= form.check_box :groupvenue, :class => 'form-check-input' %>
                <%= form.label :groupvenue, "Group Venue available", :class => 'form-check-label' %>
              </div>
                <div class='form-check'>
                <%= form.check_box :organizedactivity, :class => 'form-check-input' %>
                <%= form.label :organizedactivity, "Organized Activities available", :class => 'form-check-label' %>
              </div>
              <div class='form-check'>
                <%= form.check_box :dumpstation, :class => 'form-check-input' %>
                <%= form.label :dumpstation, "Has a dumpstation", :class => 'form-check-label' %>
              </div>
              <div class='form-check'>
                <%= form.check_box :wifi, :class => 'form-check-input' %>
                <%= form.label :wifi, "WiFi service", :class => 'form-check-label' %>
              </div>
              <div class='form-check'>
                <%= form.check_box :cell, :class => 'form-check-input' %>
                <%= form.label :cell, "Cell service available", :class => 'form-check-label' %>
              </div>

              <h6><b>Facilities</b></h6>
              <div class='form-check'>
                <%= form.check_box :toiletvault, :class => 'form-check-input' %>
                <%= form.label :toiletvault, "Vault toilets", :class => 'form-check-label' %>
              </div>
              <div class='form-check'>
                <%= form.check_box :toiletflush, :class => 'form-check-input' %>
                <%= form.label :toiletflush, "Flush toilets", :class => 'form-check-label' %>
              </div>
              <div class='form-check'>
                <%= form.check_box :toiletouthouse, :class => 'form-check-input' %>
                <%= form.label :toiletouthouse, "Outhouse", :class => 'form-check-label' %>
              </div>
              <div class='form-check'>
                <%= form.check_box :freeshowers, :class => 'form-check-input' %>
                <%= form.label :freeshowers, "Showers", :class => 'form-check-label' %>
              </div>
            </div>
      </div>
      </div>

      <hr>

      <div class='form-check'>
        <%= form.check_box :verified, :class => 'form-check-input' %>
        <%= form.label :verified, "Is this Campground Site completed?", :class => 'form-check-label' %>
      </div>
      
      <p>
        <%= form.submit :class => 'btn btn-primary' %>
      </p>
   
    <% end %>
   
    <%= link_to 'Back', admin_rv_path %>
  </div>
