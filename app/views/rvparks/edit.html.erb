<div class="container form-1000px">
<%= form_with(model: @rvpark, local: true) do |form| %>
  <div class="form-1000px centered"
    <% if @rvpark.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(@rvpark.errors.count, "error") %> prohibited
          this article from being saved:
        </h2>
        <ul>
          <% @rvpark.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    
    <div class='form-check'>
      <%= form.check_box :isnotcampground, :class => 'form-check-input' %>
      <%= form.label :isnotcampground, "Is this NOT a campground?", :class => 'form-check-label' %>
    </div>

    <div class="form-group">
      <%= form.label :parkname %><br>
      <%= form.text_field :parkname, :class => 'form-control' %>

      <%= form.label :address %><br>
      <%= form.text_field :address, :class => 'form-control' %>

      <%= form.label :phoneNumber %><br>
      <%= form.text_field :phoneNumber, :class => 'form-control' %>

      <%= form.label :description %><br>
      <%= form.text_area :description, :class => 'form-control' %>

      <%= form.label :email %><br>
      <%= form.text_field :email, :class => 'form-control' %>

      <%= form.label :website %><br>
      <%= form.text_field :website, :class => 'form-control' %>

      <%= form.label :reservation %><br>
      <%= form.text_field :reservation, :class => 'form-control' %>

      <div class ='form-check'>
            <%= form.check_box :premium, :class => 'form-check-input' %>
            <%= form.label :premium, "Premium Member", :class => 'form-check-label' %>
      </div>

      <div class="row">
            <div class='form-check'>
                <%= form.check_box :check, :class => 'form-check-input' %>
                <%= form.label :check, "Checks", :class => 'form-check-label' %>
            </div>
            <div class='form-check'>
              <%= form.check_box :visa, :class => 'form-check-input' %>
              <%= form.label :visa, "Visa", :class => 'form-check-label' %>
            </div>
            <div class='form-check'>
                <%= form.check_box :mastercard, :class => 'form-check-input' %>
                <%= form.label :mastercard, "Mastercard", :class => 'form-check-label' %>
            </div>
      </div>

      <div class="row">
            <div class="col">
              <div class="form-check">
                <%= form.check_box :pets, :class => 'form-check-input' %>
                <%= form.label :pets, "Allows pets", :class => 'form-check-label' %>
              </div>
              <div class='form-check'>
                <%= form.check_box :laundry, :class => 'form-check-input' %>
                <%= form.label :laundry, "Laundry Facilities", :class => 'form-check-label' %>
              </div>
              <div class='form-check'>
                <%= form.check_box :bbqs, :class => 'form-check-input' %>
                <%= form.label :bbqs, "BBQs", :class => 'form-check-label' %>
              </div>
              <div class='form-check'>
                <%= form.check_box :firepits, :class => 'form-check-input' %>
                <%= form.label :firepits, "Firepits?", :class => 'form-check-label' %>
              </div>
              <div class='form-check'>
                <%= form.check_box :communityarea, :class => 'form-check-input' %>
                <%= form.label :communityarea, "Communinty Hall or Rec Room?", :class => 'form-check-label' %>
              </div>
            </div>

            <div class='col'>
              <div class='form-check'>
                <%= form.check_box :bigrigs, :class => 'form-check-input' %>
                <%= form.label :bigrigs, "Room for Big Rigs?", :class => 'form-check-label' %>
              </div>
              <div class='form-check'>
                <%= form.check_box :store, :class => 'form-check-input' %>
                <%= form.label :store, "Store on or near?", :class => 'form-check-label' %>
              </div>
              <div class='form-check'>
                <%= form.check_box :cabletv, :class => 'form-check-input' %>
                <%= form.label :cabletv, "Cable TV?", :class => 'form-check-label' %>
              </div>
              <div class='form-check'>
                <%= form.check_box :picnictables, :class => 'form-check-input' %>
                <%= form.label :picnictables, "Picnic Tables", :class => 'form-check-label' %>
              </div>
            </div>

            <div class='col'>
              <div class='form-check'>
                <%= form.check_box :dumpstation, :class => 'form-check-input' %>
                <%= form.label :dumpstation, "Has a dumpstation?", :class => 'form-check-label' %>
              </div>
              <div class='form-check'>
                <%= form.check_box :wifi, :class => 'form-check-input' %>
                <%= form.label :wifi, "WiFi service?", :class => 'form-check-label' %>
              </div>
              <div class='form-check'>
                <%= form.check_box :cell, :class => 'form-check-input' %>
                <%= form.label :cell, "Cell service available?", :class => 'form-check-label' %>
              </div>
              <div class='form-check'>
                <%= form.check_box :playground, :class => 'form-check-input' %>
                <%= form.label :playground, "Playground for kids?", :class => 'form-check-label' %>
